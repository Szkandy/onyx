createdb -U {DBUSER} -h localhost -E UTF8 -T {DB-1_6} {DB-1_7}
psql -U {DBUSER} -h localhost {DB-1_7} < onyx_dir/docs/database/upgrade-1.6.x-to-1.7.0.sql

